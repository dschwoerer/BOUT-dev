# Simple I/O test
#
# Load variables from a grid file, then write them out
# to a data file.
#

NOUT = 0  # No timesteps

MZ = 5    # Z size

grid = "test_initial.grd.nc"

dump_format = "nc"  # NetCDF format. Alternative is "pdb"

TwistShift = true
Ballooning = true

[mesh]
symmetricGlobalX = false

[All]
# Boundary options
# 0 - constant
# 1 - Gaussian
# 2 - Sinusoidal
# 3 - Mix of mode numbers (NOTE: Random phase, depends on processor #)


scale = 1.0

xs_mode = 1
ys_mode = 1
zs_mode = 1

[var0]
xs_opt = 0
ys_opt = 0
zs_opt = 0

[var1]
xs_opt = 1
ys_opt = 1
zs_opt = 1

[var2]
xs_opt = 2
ys_opt = 2
zs_opt = 2

[var3]
xs_opt = 1
ys_opt = 2
zs_opt = 3

[var4]
xs_opt = 2
xs_phase = 0.187
ys_opt = 3
zs_phase = 0.724
zs_opt = 2
