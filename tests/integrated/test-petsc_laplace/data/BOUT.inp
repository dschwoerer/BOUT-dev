mz = 129
#MYG = 0
grid = "grids/flat_grid.nc"
dump_format = "nc"

[mesh:ddx]
first=C4
second=C4

[mesh:ddy]
first=C4
second=C4

[mesh:ddz]
first=C4
second=C4

#############################################

[petsc2nd]
type=petsc
all_terms=true
nonuniform=true
rtol=1.e-10
include_yguards=false
maxits=1000

gmres_max_steps = 300

pctype = user    # Supply a second solver as a preconditioner
rightprec=true   # Right precondition

[petsc2nd:precon] # Options for the preconditioning solver
                  # Leave default type (tri or spt)
all_terms  = true
nonuniform = true
filter     = 0.    # Must not filter
flags      = 49152 # Identity in boundary

#############################################

[petsc4th]
type=petsc
all_terms=true
nonuniform=true
rtol=1.e-10
include_yguards=false
maxits=1000
fourth_order=true

gmres_max_steps = 30

pctype = user
rightprec=true

[petsc4th:precon]
all_terms  = true
nonuniform = true
filter     = 0.
flags      = 49152

#############################################

[SPT]
#type=spt
all_terms=true
nonuniform=true
#flags=15
include_yguards=false

